# LLM Provider Configuration
# Options: bedrock, anthropic, openai, ollama
LLM_PROVIDER=bedrock

# AWS Bedrock Configuration (if LLM_PROVIDER=bedrock)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
BEDROCK_MODEL_ID=us.anthropic.claude-sonnet-4-5-20250929-v1:0

# Anthropic API Configuration (if LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=sk-ant-xxx
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# OpenAI API Configuration (if LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4-turbo

# Ollama Configuration (if LLM_PROVIDER=ollama)
OLLAMA_MODEL=llama3
OLLAMA_BASE_URL=http://localhost:11434

# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=credentials.json
GMAIL_TOKEN_PATH=token.json
GMAIL_HEADLESS_MODE=false
REMOVE_FROM_INBOX=true

# Classifier Configuration
CLASSIFIER_CONFIG_PATH=classifier_config.json

# Application Configuration
POLL_INTERVAL_SECONDS=60
MAX_EMAILS_PER_POLL=10
STATE_FILE=.email_state.json
LOG_LEVEL=INFO
